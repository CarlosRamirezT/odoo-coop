<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="coop_management_category" model="ir.module.category">
        <field name="name">Cooperative Management</field>
    </record>

    <record id="group_coop_manager" model="res.groups">
        <field name="name">Cooperative Manager</field>
        <field name="category_id" ref="coop_management_category"/>
        <field name="implied_ids" eval="[(4, ref('base.user_root')),
                                        (4, ref('base.user_admin')),
                                        (4, ref('account.group_account_user')),
                                        (4, ref('account.group_account_manager'))]"/>
    </record>

    <record id="group_coop_agent" model="res.groups">
        <field name="name">Cooperative Agent</field>
        <field name="category_id" ref="coop_management_category"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user')),
                                        (4, ref('account.group_account_user')),
                                        (4, ref('account.group_account_invoice'))]"/>
    </record>

    <record id="group_coop_client" model="res.groups">
        <field name="name">Cooperative Client</field>
        <field name="category_id" ref="coop_management_category"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
    </record>

</odoo>