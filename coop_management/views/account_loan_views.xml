<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="view_loan_tree" model="ir.ui.view">
        <field name="name">account.loan.tree</field>
        <field name="model">account.loan</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="partner_id"/>
                <field name="type"/>
                <field name="currency_id"/>
                <field name="initial_amount"/>
                <field name="due_amount"/>
                <field name="next_payment_date"/>
            </tree>
        </field>
    </record>

    <record id="action_create_payment" model="ir.actions.act_window">
        <field name="name">Create Payment</field>
        <field name="res_model">coop.payment</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_coop_payment_form"/>
        <field name="target">new</field>
    </record>

    <record id="view_loan_form" model="ir.ui.view">
        <field name="name">account.loan.form</field>
        <field name="model">account.loan</field>
        <field name="arch" type="xml">
            <form string="Account Loan">
                <header>
                    <button name="%(action_create_payment)d"
                            string='Register Payment'
                            class="oe_highlight"
                            context="{
                                'default_loan_id': active_id,
                                'default_partner_id': partner_id,
                                'default_payment_method': 'cashier',
                            }"
                            type='action'/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="partner_id"/>
                            <field name="type"/>
                            <field name="currency_id"/>
                        </group>
                        <group>
                            <field name="payment_terms"/>
                            <field name="rate"/>
                            <field name="initial_amount"/>
                            <field name="due_amount"/>
                            <field name="next_payment_date"/>
                        </group>
                    </group>
                    <notebook>
                        <page name="loan_payments" string="Loan Payments">
                            <field name="payment_ids" nolabel="1">
                                <tree>
                                    <field name="create_date"/>
                                    <field name="partner_id"/>
                                    <field name="communication"/>
                                    <field name="payment_method"/>
                                    <field name="amount"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

</odoo>