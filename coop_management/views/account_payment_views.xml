<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="view_coop_payment_form" model="ir.ui.view">
        <field name="name">coop.payment.form</field>
        <field name="model">coop.payment</field>
        <field name="arch" type="xml">
            <form string="Loan Payment">
                <sheet>
                    <group>
                        <group>
                            <field name="loan_id"/>
                            <field name="partner_id"/>
                            <field name="payment_method"/>
                            <field name="amount"/>
                            <field name="due_amount"/>
                            <field name="communication"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_coop_payment_tree" model="ir.ui.view">
        <field name="name">coop.payment.tree</field>
        <field name="model">coop.payment</field>
        <field name="arch" type="xml">
            <tree>
                <field name="loan_id"/>
                <field name="partner_id"/>
                <field name="payment_method"/>
                <field name="amount"/>
                <field name="due_amount"/>
                <field name="communication"/>
            </tree>
        </field>
    </record>

</odoo>