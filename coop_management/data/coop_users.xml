<?xml version="1.0" encoding="UTF-8" ?>
<odoo noupdate="1">

    <!-- adding system admin to manager security group -->
    <record id="base.user_admin" model="res.users">
        <field name="groups_id" eval="[(4, ref('coop_management.group_coop_manager'))]"/>
    </record>

    <!-- creating agent partner and user -->
    <record id="coop_partner_agent" model="res.partner">
        <field name="name">Luis Agent</field>
        <field name="company_id" ref="base.main_company"/>
        <field name="customer" eval="False"/>
        <field name="company_name">YourCompany</field>
        <field name="street">35  Inafferrabile Avenue</field>
        <field name="city">Eugene</field>
        <field name="state_id" model="res.country.state" search="[('code','ilike','OR')]"/>
        <field name="zip">97401</field>
        <field name="country_id" ref="base.us"/>
        <field name="tz">Europe/Brussels</field>
        <field name="email">lagent@example.com</field>
        <field name="phone">(829)-546-5712</field>
    </record>

    <record id="coop_user_agent" model="res.users">
        <field name="partner_id" ref="coop_management.coop_partner_agent"/>
        <field name="login">agent</field>
        <field name="password">agent</field>
        <field name="signature" type="xml"><span>-- <br/>+Mr Agent</span></field>
        <field name="company_id" ref="base.main_company"/>
        <field name="groups_id" eval="[(6,0,[ref('base.group_user'), ref('base.group_partner_manager'), ref('coop_management.group_coop_agent')])]"/>
        <field name="image" type="base64" file="base/static/img/user_demo-image.jpg"/>
    </record>

    <!-- creating client partner and user -->
    <record id="coop_partner_client_1" model="res.partner">
        <field name="name">Rafael Client</field>
        <field name="company_id" ref="base.main_company"/>
        <field name="customer" eval="True"/>
        <field name="company_name">YourCompany</field>
        <field name="street">100  Hauthorne Street</field>
        <field name="city">Yonkers</field>
        <field name="state_id"  model="res.country.state" search="[('code','ilike','OR')]"/>
        <field name="zip">97401</field>
        <field name="country_id" ref="base.us"/>
        <field name="tz">Europe/Brussels</field>
        <field name="email">rclient@example.com</field>
        <field name="phone">(809)-456-7412</field>
    </record>

    <record id="coop_user_client_1" model="res.users">
        <field name="partner_id" ref="coop_management.coop_partner_client_1"/>
        <field name="login">client1</field>
        <field name="password">client1</field>
        <field name="signature" type="xml"><span>-- <br/>+Mr Client 1</span></field>
        <field name="company_id" ref="base.main_company"/>
        <field name="groups_id" eval="[(6,0,[ref('base.group_user'), ref('coop_management.group_coop_client')])]"/>
        <field name="image" type="base64" file="base/static/img/user_demo-image.jpg"/>
    </record>

</odoo>